{
  "meta": {
    "name": "Foxy Design Tokens v1",
    "mode": "auto (light/dark)"
  },
  "colors": {
    "light": {
      "bg": "#F9FAFB",
      "surface": "#FFFFFF",
      "text": "#111827",
      "muted": "#6B7280",
      "brand_cyan": "#00B8D9",
      "brand_cyan_neon": "#00E5FF",
      "brand_orange": "#FF9D00",
      "success": "#10B981",
      "warning": "#F59E0B",
      "danger": "#EF4444",
      "divider": "#E5E7EB",
      "card": "#FFFFFF",
      "chip_bg": "#EEF2FF"
    },
    "dark": {
      "bg": "#0F111A",
      "surface": "#12141F",
      "text": "#F3F4F6",
      "muted": "#94A3B8",
      "brand_cyan": "#00D3FF",
      "brand_cyan_neon": "#35FFFF",
      "brand_orange": "#FFB84C",
      "success": "#34D399",
      "warning": "#F59E0B",
      "danger": "#F87171",
      "divider": "#1F2430",
      "card": "#141826",
      "chip_bg": "#1B2030"
    }
  },
  "radius": {
    "xs": 6,
    "sm": 10,
    "md": 14,
    "lg": 20,
    "xl": 28
  },
  "shadow": {
    "sm": "0 1px 2px rgba(0,0,0,0.06)",
    "md": "0 6px 24px rgba(0,0,0,0.08)",
    "xl": "0 20px 60px rgba(0,0,0,0.12)"
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 24,
    "xxl": 32
  },
  "typography": {
    "fontFamily": "Inter, ui-sans-serif, system-ui",
    "sizes": {
      "xs": 12,
      "sm": 14,
      "md": 16,
      "lg": 20,
      "xl": 28,
      "xxl": 36
    },
    "weights": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    }
  },
  "components": {
    "buttonPrimary": {
      "bg": "{colors.light.brand_cyan}",
      "text": "#ffffff",
      "radius": "{radius.md}",
      "shadow": "{shadow.md}"
    },
    "micButton": {
      "diameter": 72,
      "bg": "linear-gradient(180deg, #00E5FF 0%, #00B8D9 100%)",
      "shadow": "0 10px 30px rgba(0, 200, 255, 0.35)"
    },
    "progressColors": {
      "ok": "#10B981",
      "warn": "#F59E0B",
      "alert": "#EF4444"
    }
  }
}